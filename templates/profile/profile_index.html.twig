{% extends '@Jerm/Base/index.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-md-4">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">My Profile</h3>
                    <div class="box-tools">
                        <a class="btn btn-sm head_action_btn"
                           data-toggle="modal"
                           data-target="#action_modal"
                           data-href="{{ path('profile_update') }}">
                            <i class="fa fa-pencil"></i>
                            Edit
                        </a>
                    </div>
                </div>
                <div class="box-body box-profile">
                    {% if app.user.profilePic is not null %}
                        <img class="profile-user-img img-responsive img-circle" src="{{ asset('app/img/userProfile/' ~ app.user.profilePic) }}">
                    {% else %}
                        <img class="profile-user-img img-responsive img-circle" src="{{ asset('bundles/jerm/img/avatar.gif') }}">
                    {% endif %}
                    <h3 class="profile-username text-center">{{ app.user.fullName }}</h3>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>User Name</b>
                            <a class="pull-right">{{ app.user.username }}</a>
                        </li>
                        <li class="list-group-item">
                            <b>E-mail</b>
                            <a class="pull-right">{{ app.user.email }}</a>
                        </li>
                    </ul>
                    <a id="changePassBtn"
                       data-href="{{ path('profile_password_update') }}"
                       class="btn btn-primary btn-flat btn-block head_action_btn"
                       data-toggle="modal"
                       data-target="#action_modal">
                        Change Password
                    </a>
                </div>
            </div>

        </div>
    </div>
{% endblock %}