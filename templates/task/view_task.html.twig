{% extends '@Jerm/Modal/blank.html.twig' %}

{% block content %}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">
            {{ task.title }}

            <a class="btn btn-sm modal_redirect" data-href="{{ path('view_task', { 'id': task.id }) }}">
                <i class="fa fa-refresh"></i> Refresh
            </a>
        </h4>

        <span>Task #{{ task.id }}</span>
    </div>

    <div class="modal-body">
        <p>Description:</p>
        <p class="text">{{ task.description|nl2br }}</p>
    </div>

    <div class="modal-body">
        <p>Follow Up:</p>
        <p>{{ task.followUp }}</p>
    </div>

    <div class="modal-body">
        <p>Subscribed Users:</p>
        <ul>
            {% for user in task.userSubscribed %}
                <li>{{ user.email }}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="modal-body">
        <p>Tags:</p>
        <ul>
            {% for tag in task.tags %}
                <li>{{ tag }}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="modal-footer">
        <button class="btn btn-default btn-flat pull-left" data-dismiss="modal">Close</button>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('app/js/modal_redirect.js') }}"></script>
{% endblock %}