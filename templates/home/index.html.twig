{% extends '@Jerm/Base/index.html.twig' %}

{% block body %}
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Welcome!</h3>
        </div>

        <div class="box-body">
            <p>
                Hello, and welcome to musicjerm's todo list / task tracker.
            </p>
            {% if app.user is null %}
                <p>Please <a href="{{ path('login') }}">Log in</a>.</p>
            {% else %}
                <p>You may change your username and password <a href="{{ path('profile') }}">here</a>.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}